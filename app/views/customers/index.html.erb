<h1>Customer Admin</h1>

<%= link_to 'Create Customer', new_customer_path %>

<table>
	<tr>
		<td>Name</td>
		<td>Street</td>
		<td>Zipcode</td>
		<td>City</td>
		<td>email</td>
		<td>Banknumber</td>
		<td>Accountnumber</td>
	</tr>

	<% @customers.each do |customer| %>
		<tr>
			<td><%= customer.name%></td>
			<td><%= customer.street%></td>
			<td><%= customer.zipcode%></td>
			<td><%= customer.city%></td>
			<td><%= customer.email%></td>
			<td><%= customer.banknumber%></td>
			<td><%= customer.accountnumer%></td>
			<td><%= link_to 'Show', customer_path(customer) %></td>
			<td><%= link_to 'Edit', edit_customer_path(customer) %></td>
			<td><%= link_to 'Delete', customer_path(customer), method: :delete, data: { confirm: 'Are you sure' } %></td>
		</tr>
	<% end -%>
</table>